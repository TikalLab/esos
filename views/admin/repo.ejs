<div class="page-header">
	<div class="page-title">
		&nbsp;
	</div>
</div>

	<div class="panel panel-default">
		<div class="panel-heading"><h6 class="panel-title"><i class="icon-new"></i> Repo</h6></div>
			<div class="panel-body">
						<div class="form-group">
								<label>id:</label>
								<input readonly type="text" class="form-control" value="<%=repo._id%>">
								<a href="<%=repo.html_url%>">Github Link</a>
						</div>
						<div class="form-group">
								<label>name:</label>
								<input readonly type="text" class="form-control" value="<%=repo.full_name%>">
						</div>
		        <div class="form-group">
		            <label>github link:</label>
								<a href="<%=repo.html_url%>">Github Link</a>
		        </div>
	    </div>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading"><h6 class="panel-title"><i class="icon-new"></i> Plans</h6></div>
			<div class="panel-body">
						<div class="form-group">
								<label>perosnal:</label>
								<input readonly type="text" class="form-control" value="$<%=repo.plans.personal.price%>">
						</div>
		        <div class="form-group">
		            <label>team:</label>
								<input readonly type="text" class="form-control" value="$<%=repo.plans.team.price%>">
		        </div>
						<div class="form-group">
		            <label>business:</label>
								<input readonly type="text" class="form-control" value="$<%=repo.plans.business.price%>">
		        </div>
						<div class="form-group">
		            <label>enterprise:</label>
								<input readonly type="text" class="form-control" value="$<%=repo.plans.enterprise.price%>">
		        </div>
	    </div>
	</div>

	<form id="address-form" role="form" action="/admin/crm/update-user-address" method="POST">
		<input type="hidden" name="user_id" value="<%=user._id%>">
		<div class="panel panel-default">
			<div class="panel-heading"><h6 class="panel-title"><i class="icon-new"></i> Developer</h6></div>
				<div class="panel-body">
							<div class="form-group">
									<label>id:</label>
									<input type="text" class="form-control" name="recipient_name" value="<%=developer._id%>">
							</div>
							<div class="form-group">
			            <label>github login:</label>
									<input type="text" class="form-control" name="line1" value="<%=developer.github.login%>">
			        </div>
			        <div class="form-group">
			            <label>name:</label>
									<input type="text" class="form-control" name="line1" value="<%=developer.name%>">
			        </div>
							<div class="form-group">
			            <label>email:</label>
									<input type="text" class="form-control" name="line2" value="<%=developer.email%>">
			        </div>
		    </div>
		</div>
	</form>


	<div class="panel panel-default">
		<div class="panel-heading"><h6 class="panel-title"><i class="icon-table"></i> Subscribers</h6></div>
	    <div class="datatable">
	      <table class="table">
	        <thead>
	          <tr>
	            <th>id</th>
							<th>client id</th>
							<th>client name</th>
							<th>plan</th>
	            <th>since</th>
	            <th>type</th>
	            <th>beneficient</th>
	          </tr>
	        </thead>
	        <tbody>
	          <% subscriptions.forEach(function(subscription){ %>
		            <tr>
			              <td><%=subscription._id%></td>
										<td><%=subscription.user_id%></td>
										<td><%=subscription.github_login%></td>
										<td><%=subscription.plan%></td>
	                  <td><%=moment(subscription.created_at).format('YYYY-MM-DD')%></td>
	                  <td><%=('org' in subscription ? 'org' : ('team' in subscription ? 'team' : 'personal'))%></td>
										<td><%=('org' in subscription ? subscription.org : ('team' in subscription ? subscription.team.org + '/' + subscription.team.name : subscription.github_login))%></td>
		            </tr>
	          <% }) %>
	        </tbody>
	      </table>
	    </div>
	  </div>
	</div>
